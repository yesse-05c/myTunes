<Window x:Class="myTunes.RenamePlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Playlist" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Enter new playlist name:" Margin="0,0,0,10"/>
        <TextBox x:Name="NewPlaylistTextBox" Width="200" Height="25" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5,0,0,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
